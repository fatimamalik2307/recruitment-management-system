<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.recruitment.app.controllers.ReviewShortlistController"
      stylesheets="@/styles/review_shortlist.css"
      spacing="20"
      alignment="TOP_CENTER"
      styleClass="root-bg"
      prefWidth="1100"
      prefHeight="750">

    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>

    <!-- Page Title -->
    <Label text="Review Shortlist" styleClass="title-text"/>

    <!-- Selection + Criteria -->
    <VBox spacing="12" styleClass="form-card">

        <ComboBox fx:id="jobComboBox" promptText="Select Job" styleClass="combo"/>

        <Label text="Criteria Details:" styleClass="label"/>
        <TextArea fx:id="criteriaDetails"
                  editable="false"
                  prefRowCount="4"
                  styleClass="textarea"/>
    </VBox>

    <!-- Generate Button -->
    <Button fx:id="generateBtn"
            text="Generate Shortlist"
            onAction="#generateShortlist"
            styleClass="btn-primary"/>

    <!-- TABLE AREA -->
    <TableView fx:id="shortlistTable" styleClass="dark-table" VBox.vgrow="ALWAYS">

        <columns>
            <TableColumn text="ID" fx:id="colId" prefWidth="60"/>
            <TableColumn text="Application ID" fx:id="colAppId" prefWidth="120"/>
            <TableColumn text="Applicant Name" fx:id="colApplicantName" prefWidth="180"/>
            <TableColumn text="Phone" fx:id="colPhone" prefWidth="140"/>
            <TableColumn text="Shortlisted At" fx:id="colShortlistedAt" prefWidth="180"/>
            <TableColumn text="Actions" fx:id="colActions" prefWidth="200"/>
        </columns>

    </TableView>

</VBox>
