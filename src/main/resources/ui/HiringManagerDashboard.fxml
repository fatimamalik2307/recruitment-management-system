<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.recruitment.app.controllers.HiringManagerDashboardController"
      spacing="20" alignment="CENTER">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Hiring Manager Dashboard"
           style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <Button text="View Shortlisted Candidates" onAction="#openShortlistedCandidates"/>
    <Button text="View All Applications" onAction="#openAllApplications"/>
    <Button text="Finalize Hiring Decision" onAction="#openFinalDecision"/>
    <Button text="Logout" onAction="#logout"/>

</VBox>
