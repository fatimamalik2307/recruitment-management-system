<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.recruitment.app.controllers.RecruiterDashboardController"
      spacing="20" alignment="CENTER">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Recruiter Dashboard" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <Button text="Create Job Posting" onAction="#openCreateJob"/>
    <Button text="Review Applications" onAction="#openReviewApplications"/>
    <Button text="Define Shortlisting Criteria" onAction="#openShortlistingCriteria"/>
    <Button text="Review Shortlist" onAction="#openReviewShortlist"/>
    <Button text="Generate Recruitment Report" onAction="#openRecruitmentReport"/>
    <Button text="Generate Final Ranking" onAction="#openFinalRanking"/>
    <Button text="Update Profile" onAction="#openProfile"/>
    <Button text="Logout" onAction="#logout"/>

</VBox>
