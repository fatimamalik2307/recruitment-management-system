<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.recruitment.app.controllers.BrowseJobsController"
            prefWidth="1000" prefHeight="700"
            styleClass="root-pane">

    <!-- ðŸŒŸ HEADER (Top Section) ðŸŒŸ -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="30" styleClass="header-bar">

            <!-- Logo/Title -->
            <Label text="JobSeeker Dashboard" styleClass="header-title" HBox.hgrow="ALWAYS" />

            <!-- Navigation Links (Left Side) -->
            <HBox spacing="15" alignment="CENTER_LEFT">
                <Button text="Track Applications" onAction="#openTrackApplications" styleClass="header-link" />
                <Button text="Change Password" onAction="#openChangePassword" styleClass="header-link" />
            </HBox>

            <!-- Spacer to push profile/logout to the right -->
            <Region HBox.hgrow="ALWAYS" />

            <!-- Profile and Logout (Right Side) -->
            <HBox spacing="10" alignment="CENTER_RIGHT" styleClass="profile-group">
                <!-- Update Profile -->
                <Button onAction="#openProfile" styleClass="icon-btn-circular">
                    <!-- Placeholder Icon (Use SVG or proper icon library in a real app) -->
                    <graphic>
                        <StackPane>
                            <Circle radius="12" fill="#cee0ff" />
                            <Label text="ðŸ‘¤" style="-fx-font-size: 14px;" />
                        </StackPane>
                    </graphic>
                </Button>

                <!-- Logout Button (Icon only) -->
                <Button onAction="#logout" styleClass="icon-btn">
                    <graphic>
                        <Label text="â»" style="-fx-font-size: 18px; -fx-text-fill: white;" />
                    </graphic>
                    <tooltip>
                        <Tooltip text="Logout" />
                    </tooltip>
                </Button>
            </HBox>

            <padding>
                <Insets top="15" right="20" bottom="15" left="20" />
            </padding>
        </HBox>
    </top>

    <!-- ðŸ“œ BODY (Scrollable Job Listings) ðŸ“œ -->
    <center>
        <ScrollPane styleClass="job-scroll-pane" fitToWidth="true" hbarPolicy="NEVER">
            <!-- Container for job cards -->
            <VBox fx:id="jobsContainer" spacing="20" alignment="TOP_CENTER" style="-fx-padding: 30;" />
        </ScrollPane>
    </center>

    <stylesheets>
        <URL value="@style.css" />
    </stylesheets>

</BorderPane>