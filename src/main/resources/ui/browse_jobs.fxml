<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>
<?import java.net.URL?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.recruitment.app.controllers.BrowseJobsController"
            prefWidth="1200" prefHeight="800"
            styleClass="root-pane">

    <!-- ðŸŒŸ MODERN HEADER / NAVBAR -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="25" styleClass="header-bar">
            <padding>
                <Insets top="15" right="25" bottom="15" left="25"/>
            </padding>

            <!-- App Title -->
            <Label text="JobSeeker Portal" styleClass="header-title"/>

            <!-- Navigation Items -->
            <HBox alignment="CENTER_LEFT" spacing="10" styleClass="nav-group">
                <Button text="Track Applications" onAction="#openTrackApplications" styleClass="nav-btn"/>
