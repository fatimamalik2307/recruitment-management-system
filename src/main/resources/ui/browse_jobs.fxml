            </HBox>

            <Region HBox.hgrow="ALWAYS"/>

            <!-- Profile & Logout -->
            <HBox spacing="15" alignment="CENTER_RIGHT" styleClass="profile-group">
                <Button onAction="#openProfile" styleClass="round-btn">
                    <graphic>
                        <Label text="ðŸ‘¤" style="-fx-font-size: 15px;"/>
                    </graphic>
                </Button>

                <Button onAction="#logout" styleClass="logout-btn">
                    <graphic>
                        <Label text="â»" style="-fx-font-size: 16px;"/>
                    </graphic>
                    <tooltip><Tooltip text="Logout"/></tooltip>
                </Button>
            </HBox>

        </HBox>
    </top>

    <!-- ðŸ“œ JOB LISTINGS AREA -->
    <center>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" styleClass="job-scroll-pane">
            <VBox fx:id="jobsContainer" spacing="25" alignment="TOP_CENTER" styleClass="jobs-container"/>
        </ScrollPane>
    </center>

    <!-- Stylesheet -->
    <stylesheets>
        <URL value="@../styles/browsejobs.css"/>
    </stylesheets>

</BorderPane>
