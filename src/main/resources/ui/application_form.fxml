<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.recruitment.app.controllers.ApplicationFormController"
      stylesheets="@/styles/application_form.css"
      styleClass="root-bg"
      alignment="TOP_CENTER"
      spacing="20"
      prefWidth="900"
      prefHeight="750">

    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>

    <!-- TITLE -->
    <Label text="Application Form" styleClass="title-text"/>

    <!-- FORM BOX -->
    <VBox spacing="12" styleClass="form-card">

        <TextField fx:id="fullNameField"
                   promptText="Full name"
                   styleClass="textfield"/>

        <TextField fx:id="emailField"
                   promptText="Email"
                   styleClass="textfield"/>

        <TextField fx:id="contactField"
                   promptText="Contact number"
                   styleClass="textfield"/>

        <TextArea fx:id="qualificationField"
                  promptText="Qualifications"
                  prefRowCount="3"
                  styleClass="textarea"/>

        <TextArea fx:id="experienceField"
                  promptText="Experience (optional)"
                  prefRowCount="3"
                  styleClass="textarea"/>

        <TextArea fx:id="coverLetterField"
                  promptText="Cover letter"
                  prefRowCount="4"
                  styleClass="textarea"/>

        <Label text="Uploaded documents:" styleClass="label"/>

        <ListView fx:id="filesList"
                  prefHeight="120"
                  styleClass="listview"/>

        <HBox spacing="10">
            <Button fx:id="btnUpload"
                    text="Upload Documents"
                    styleClass="btn-secondary"/>

            <Button fx:id="btnSubmit"
                    text="Submit Application"
                    styleClass="btn-primary"/>

            <Button fx:id="btnBack"
                    text="Back"
                    styleClass="btn-secondary"/>
        </HBox>

        <Label fx:id="messageLabel" styleClass="message-label"/>

    </VBox>

</VBox>
