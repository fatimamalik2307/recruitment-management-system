<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.recruitment.app.controllers.UpdateProfileController"
      spacing="10" alignment="CENTER">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Update Profile" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

    <TextField fx:id="fullNameField" promptText="Full Name"/>
    <TextField fx:id="emailField" promptText="Email"/>
    <TextField fx:id="contactField" promptText="Contact"/>

    <Button text="Save" onAction="#updateProfile"/>
    <Label fx:id="messageLabel"/>

    <Button text="Back to Jobs" onAction="#backToJobs"/>

</VBox>
