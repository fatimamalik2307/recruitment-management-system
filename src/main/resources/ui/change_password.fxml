<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.recruitment.app.controllers.ChangePasswordController"
      spacing="10" alignment="CENTER">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Change Password" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

    <PasswordField fx:id="oldPasswordField" promptText="Old Password" />
    <PasswordField fx:id="newPasswordField" promptText="New Password" />
    <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password" />

    <Button text="Update Password" onAction="#updatePassword"/>
    <Label fx:id="messageLabel"/>

    <Button text="Back" onAction="#goBack"/>
</VBox>
