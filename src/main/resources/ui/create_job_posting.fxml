<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.recruitment.app.controllers.CreateJobPostingController"
      stylesheets="@/styles/create_job.css"
      spacing="20"
      alignment="TOP_CENTER"
      styleClass="root-bg">

    <padding>
        <Insets top="25" right="35" bottom="25" left="35"/>
    </padding>

    <!-- Header -->
    <Label text="Create Job Posting" styleClass="title-text"/>

    <!-- Main Form -->
    <GridPane hgap="20" vgap="16" styleClass="form-card">
        <columnConstraints>
            <ColumnConstraints percentWidth="28"/>
            <ColumnConstraints percentWidth="72"/>
        </columnConstraints>

        <!-- Job Title -->
        <Label text="Job Title:" GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="label"/>
        <TextField fx:id="titleField" GridPane.rowIndex="0" GridPane.columnIndex="1" styleClass="input"/>

        <!-- Department -->
        <Label text="Department:" GridPane.rowIndex="1" GridPane.columnIndex="0" styleClass="label"/>
        <ComboBox fx:id="deptCombo" GridPane.rowIndex="1" GridPane.columnIndex="1" styleClass="combo"/>

        <!-- Description -->
        <Label text="Description:" GridPane.rowIndex="2" GridPane.columnIndex="0" styleClass="label"/>
        <TextArea fx:id="descriptionArea" prefRowCount="4"
                  GridPane.rowIndex="2" GridPane.columnIndex="1" styleClass="textarea"/>

        <!-- Required Qualification -->
        <Label text="Required Qualification:" GridPane.rowIndex="3" GridPane.columnIndex="0" styleClass="label"/>
        <TextField fx:id="qualificationField" GridPane.rowIndex="3" GridPane.columnIndex="1" styleClass="input"/>

        <!-- Job Location -->
        <Label text="Job Location:" GridPane.rowIndex="4" GridPane.columnIndex="0" styleClass="label"/>
        <TextField fx:id="locationField" GridPane.rowIndex="4" GridPane.columnIndex="1" styleClass="input"/>

        <!-- Deadline -->
        <Label text="Deadline:" GridPane.rowIndex="5" GridPane.columnIndex="0" styleClass="label"/>
        <DatePicker fx:id="deadlinePicker" GridPane.rowIndex="5" GridPane.columnIndex="1" styleClass="date"/>

        <!-- Job Type -->
        <Label text="Job Type:" GridPane.rowIndex="6" GridPane.columnIndex="0" styleClass="label"/>
        <ComboBox fx:id="jobTypeCombo" GridPane.rowIndex="6" GridPane.columnIndex="1" styleClass="combo"/>

        <!-- Salary Range -->
        <Label text="Salary Range:" GridPane.rowIndex="7" GridPane.columnIndex="0" styleClass="label"/>
        <TextField fx:id="salaryField" GridPane.rowIndex="7" GridPane.columnIndex="1" styleClass="input"/>
    </GridPane>

    <!-- Action Buttons -->
    <HBox spacing="12" styleClass="button-group">
        <Button text="Prepare Person Specification" onAction="#openPersonSpecification" styleClass="btn-blue"/>
        <Button text="Prepare Job Description" onAction="#openJobDescription" styleClass="btn-green"/>
        <Button text="Load Saved Description" onAction="#openSavedDescriptions" styleClass="btn-purple"/>
    </HBox>

    <Button fx:id="publishButton" text="Publish Job"
            onAction="#publishJob"
            styleClass="btn-primary"/>

</VBox>
