<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.recruitment.app.controllers.CreateJobPostingController"
      spacing="10"
      alignment="TOP_CENTER">

    <!-- Proper padding declaration -->
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Create Job Posting" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints percentWidth="25"/>
            <ColumnConstraints percentWidth="75"/>
        </columnConstraints>

        <Label text="Job Title:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="titleField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Department:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="deptField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Description:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextArea fx:id="descriptionArea" GridPane.rowIndex="2" GridPane.columnIndex="1" prefRowCount="4"/>

        <Label text="Required Qualification:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="qualificationField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Job Location:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextField fx:id="locationField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <Label text="Deadline:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <DatePicker fx:id="deadlinePicker" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

        <Label text="Job Type:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
        <TextField fx:id="jobTypeField" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

        <Label text="Salary Range:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
        <TextField fx:id="salaryField" GridPane.rowIndex="7" GridPane.columnIndex="1"/>
    </GridPane>

    <Button fx:id="publishButton" text="Publish Job" onAction="#publishJob"
            style="-fx-font-size: 14px; -fx-padding: 8 20;"/>

</VBox>
