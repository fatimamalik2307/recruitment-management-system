<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.recruitment.app.controllers.HMJobPostingsController"
      spacing="15" style="-fx-padding: 20;">

    <Label text="My Job Postings" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
    <ComboBox fx:id="jobDropdown" prefWidth="250"/>
    <Button text="Load Candidates" onAction="#loadCandidatesForJob"/>

    <Label fx:id="statusLabel" text="Select a job to view candidate status" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Button fx:id="reviewCandidatesButton" text="Review Candidates" onAction="#reviewCandidates"
                disable="true" style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
    </HBox>

    <TableView fx:id="jobTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colTitle" text="Job Title" prefWidth="200"/>
            <TableColumn fx:id="colDepartment" text="Department" prefWidth="150"/>
            <TableColumn fx:id="colStatus" text="Job Status" prefWidth="100"/>
            <TableColumn fx:id="colCandidates" text="Candidates" prefWidth="80"/>
            <TableColumn fx:id="colRecruiterStatus" text="Recruiter Status" prefWidth="120"/>
        </columns>
    </TableView>

</VBox>