<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<?import java.net.URL?>
<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.recruitment.app.controllers.TrackApplicationsController"
      spacing="15"
      styleClass="root-pane">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="My Applications Status" styleClass="title"/>

    <TableView fx:id="applicationsTable" prefHeight="400" styleClass="table-view">
        <columns>
            <TableColumn fx:id="jobCol" text="Job Title" prefWidth="200"/>
            <TableColumn fx:id="dateCol" text="Applied On" prefWidth="180"/>
            <TableColumn fx:id="statusCol" text="Status" prefWidth="150"/>
        </columns>
    </TableView>

    <Button text="Back" onAction="#goBack" styleClass="secondary-btn"/>

    <stylesheets>
        <URL value="@../styles/track_application.css"/>
    </stylesheets>


</VBox>
