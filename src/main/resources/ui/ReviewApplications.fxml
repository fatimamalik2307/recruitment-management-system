<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.cell.PropertyValueFactory?>

<VBox xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.recruitment.app.controllers.ReviewApplicationsController"
      spacing="10">

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <Label text="Select Job:"/>
    <ComboBox fx:id="jobComboBox" prefWidth="300"/>

    <TableView fx:id="applicationsTable" prefHeight="300" prefWidth="500">
        <columns>
            <TableColumn fx:id="applicantNameCol" text="Applicant Name" prefWidth="150"/>
            <TableColumn fx:id="appliedDateCol" text="Applied Date" prefWidth="150"/>
            <TableColumn fx:id="statusCol" text="Status" prefWidth="100"/>
            <TableColumn fx:id="actionCol" text="Action" prefWidth="100"/>
        </columns>
    </TableView>


    <Button text="Load Applications" onAction="#loadApplications" prefWidth="150"/>
</VBox>
