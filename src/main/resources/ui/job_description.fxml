<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<VBox spacing="10" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.recruitment.app.controllers.JobDescriptionController">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Prepare Job Description" style="-fx-font-size:18; -fx-font-weight:bold;"/>

    <TextField fx:id="titleField" promptText="Job Title"/>

    <ComboBox fx:id="jobTypeCombo" promptText="Job Type"/>
    <ComboBox fx:id="departmentCombo" promptText="Department"/>

    <TextArea fx:id="dutiesArea" promptText="Duties"/>
    <TextArea fx:id="respArea" promptText="Responsibilities"/>
    <TextArea fx:id="purposeArea" promptText="Job Purpose"/>
    <TextArea fx:id="reportArea" promptText="Reporting Structure"/>
    <TextArea fx:id="qualificationArea" promptText="Required Qualification"/>
    <Button text="Save" onAction="#saveDescription"/>
    <Button text="Load Saved Description" onAction="#openSavedDescriptions"/>
    <Button text="Cancel" onAction="#cancel"/>
</VBox>
