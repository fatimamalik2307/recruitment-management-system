<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.recruitment.app.controllers.JobDescriptionController"
      spacing="15" styleClass="root" style="-fx-padding: 20;"
      stylesheets="@../styles/JobDescription.css">

    <Label text="Prepare Job Description" styleClass="header-title"/>

    <TextField fx:id="titleField" promptText="Job Title" styleClass="text-field"/>

    <ComboBox fx:id="jobTypeCombo" promptText="Job Type" styleClass="combo-box"/>
    <ComboBox fx:id="departmentCombo" promptText="Department" styleClass="combo-box"/>

    <TextArea fx:id="dutiesArea" promptText="Duties" prefRowCount="3" styleClass="text-area"/>
    <TextArea fx:id="respArea" promptText="Responsibilities" prefRowCount="3" styleClass="text-area"/>
    <TextArea fx:id="purposeArea" promptText="Job Purpose" prefRowCount="2" styleClass="text-area"/>
    <TextArea fx:id="reportArea" promptText="Reporting Structure" prefRowCount="2" styleClass="text-area"/>
    <TextArea fx:id="qualificationArea" promptText="Required Qualification" prefRowCount="2" styleClass="text-area"/>

    <HBox spacing="15" alignment="CENTER_LEFT">
        <Button text="Save" onAction="#saveDescription" styleClass="btn-blue"/>
        <Button text="Load Saved Description" onAction="#openSavedDescriptions" styleClass="btn-cyan"/>
        <Button text="Cancel" onAction="#cancel" styleClass="btn-pink"/>
    </HBox>
</VBox>
