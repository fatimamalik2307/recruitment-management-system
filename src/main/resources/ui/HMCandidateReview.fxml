<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<?import java.net.URL?>
<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.recruitment.app.controllers.HMCandidateReviewController"
      prefWidth="1000"
      prefHeight="700"
      minWidth="900"
      minHeight="600"
      maxWidth="Infinity"
      maxHeight="Infinity"

      spacing="15" styleClass="root" style="-fx-padding: 20;">
    <stylesheets>
        <URL value="@/styles/HMCandidateReview.css"/>
    </stylesheets>
    <Label text="Review Candidates" styleClass="header-title"/>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <ComboBox fx:id="jobDropdown" prefWidth="250" styleClass="combo-box"/>
        <Button text="Load Candidates" onAction="#loadCandidatesForSelectedJob" styleClass="btn-blue"/>
        <Button fx:id="notifyButton"
                text="ðŸ“§ Notify Candidates"
                onAction="#notifyCandidates"
                styleClass="btn-blue"/>

    </HBox>

    <Label fx:id="statusLabel" text="Select a job to load candidates" styleClass="status-label"/>

    <HBox spacing="20" VBox.vgrow="ALWAYS">

        <!-- Left side - Candidates Table -->
        <VBox spacing="10" prefWidth="500" styleClass="card">
            <Label text="Candidates for Review" styleClass="card-title"/>
            <TableView fx:id="candidateTable" prefHeight="400" styleClass="table-view">
                <columns>
                    <TableColumn fx:id="colRank" text="Rank" prefWidth="60"/>
                    <TableColumn fx:id="colApplicantName" text="Applicant Name" prefWidth="150"/>
                    <TableColumn fx:id="colScore" text="Score" prefWidth="80"/>
                    <TableColumn fx:id="colStatus" text="Status" prefWidth="100"/>
                    <TableColumn fx:id="colDecision" text="Decision" prefWidth="100"/>
                    <TableColumn fx:id="colActions" text="Actions" prefWidth="100"/>
                </columns>
            </TableView>
        </VBox>

        <!-- Right side - Candidate Details -->
        <VBox fx:id="candidateDetailsPanel" spacing="15" prefWidth="350" styleClass="card">
            <Label text="Candidate Details and Notes" styleClass="card-title"/>

            <HBox spacing="10" alignment="CENTER">
                <Button fx:id="viewDetailsButton" text="ðŸ“‹ View Full Details"
                        onAction="#viewApplicantDetails"
                        styleClass="btn-cyan" disable="true"/>
            </HBox>

            <VBox spacing="10">
                <Label text="Add Note:" styleClass="card-description"/>
                <TextArea fx:id="noteTextArea" promptText="Enter your notes here..." prefRowCount="3" styleClass="text-area"/>

                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Note Type:"/>
                    <ComboBox fx:id="noteTypeComboBox" prefWidth="120" styleClass="combo-box"/>
                    <Button fx:id="addNoteButton" text="Add Note" onAction="#addNote"
                            styleClass="btn-blue" disable="true"/>
                </HBox>
            </VBox>

            <VBox spacing="10" VBox.vgrow="ALWAYS">
                <Label text="Previous Notes:" styleClass="card-description"/>
                <ListView fx:id="notesListView" prefHeight="150" styleClass="list-view"/>
            </VBox>

            <HBox spacing="15" alignment="CENTER">
                <Button fx:id="selectButton" text="âœ… Select" onAction="#selectCandidate"
                        styleClass="btn-emerald" disable="true"/>
                <Button fx:id="rejectButton" text="âŒ Reject" onAction="#rejectCandidate"
                        styleClass="btn-pink" disable="true"/>
            </HBox>
        </VBox>
    </HBox>
</VBox>
