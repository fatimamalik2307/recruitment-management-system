<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.recruitment.app.controllers.HMCandidateReviewController"
      spacing="15" style="-fx-padding: 20;">

    <Label text="Review Candidates" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <ComboBox fx:id="jobDropdown" prefWidth="250"/>
        <Button text="Load Candidates" onAction="#loadCandidatesForSelectedJob"/>
    </HBox>

    <Label fx:id="statusLabel" text="Select a job to load candidates"
           style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

    <HBox spacing="20" VBox.vgrow="ALWAYS">

        <!-- Left side - Candidates Table -->
        <VBox spacing="10" prefWidth="500">
            <Label text="Candidates for Review" style="-fx-font-weight: bold;"/>
            <TableView fx:id="candidateTable" prefHeight="400">
                <columns>
                    <TableColumn fx:id="colRank" text="Rank" prefWidth="60"/>
                    <TableColumn fx:id="colApplicantName" text="Applicant Name" prefWidth="150"/>
                    <TableColumn fx:id="colScore" text="Score" prefWidth="80"/>
                    <TableColumn fx:id="colStatus" text="Status" prefWidth="100"/>
                    <TableColumn fx:id="colDecision" text="Decision" prefWidth="100"/>
                    <TableColumn fx:id="colActions" text="Actions" prefWidth="100"/>
                </columns>
            </TableView>
        </VBox>

        <!-- Right side - Candidate Details -->
        <VBox fx:id="candidateDetailsPanel" spacing="15" prefWidth="350">
            <Label text="Candidate Details and Notes" style="-fx-font-weight: bold;"/>

            <HBox spacing="10" alignment="CENTER">
                <Button fx:id="viewDetailsButton" text="ðŸ“‹ View Full Details"
                        onAction="#viewApplicantDetails"
                        style="-fx-background-color: #3498db; -fx-text-fill: white;" disable="true"/>
            </HBox>

            <VBox spacing="10">
                <Label text="Add Note:" style="-fx-font-weight: bold;"/>
                <TextArea fx:id="noteTextArea" promptText="Enter your notes here..." prefRowCount="3"/>

                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Note Type:"/>
                    <ComboBox fx:id="noteTypeComboBox" prefWidth="120"/>
                    <Button fx:id="addNoteButton" text="Add Note" onAction="#addNote"
                            style="-fx-background-color: #2c3e50; -fx-text-fill: white;" disable="true"/>
                </HBox>
            </VBox>

            <VBox spacing="10" VBox.vgrow="ALWAYS">
                <Label text="Previous Notes:" style="-fx-font-weight: bold;"/>
                <ListView fx:id="notesListView" prefHeight="150"/>
            </VBox>

            <HBox spacing="15" alignment="CENTER">
                <Button fx:id="selectButton" text="âœ… Select" onAction="#selectCandidate"
                        style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold;" disable="true"/>
                <Button fx:id="rejectButton" text="âŒ Reject" onAction="#rejectCandidate"
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;" disable="true"/>
            </HBox>
        </VBox>
    </HBox>
</VBox>
