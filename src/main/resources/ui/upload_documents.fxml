<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import java.net.URL?>
<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.recruitment.app.controllers.UploadDocumentsController"
      spacing="10"
      prefWidth="1000"
      prefHeight="700"
      minWidth="900"
      minHeight="600"
      styleClass="root-pane"
      maxWidth="Infinity"
      maxHeight="Infinity">

    <stylesheets>
        <URL value="@../styles/uploadDocuments.css"/>
    </stylesheets>

    <!-- rest of your VBox content -->



    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <Label text="Upload CV / Documents" style="-fx-font-size: 20; -fx-font-weight: bold;"/>

    <Button text="Select Files" onAction="#selectDocuments"/>

    <ListView fx:id="filesList" prefHeight="200"/>

    <HBox spacing="8">
        <Button text="Upload and Return" onAction="#uploadDocuments"/>
        <Button text="Cancel" onAction="#cancel"/>
    </HBox>
</VBox>

