<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>
<?import java.net.URL?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.recruitment.app.controllers.RegisterController"
           prefWidth="900" prefHeight="700"
           styleClass="root-pane">

    <!-- This VBox centers the card -->
    <VBox alignment="CENTER">

        <!-- Card -->
        <VBox styleClass="card" spacing="25" alignment="CENTER" prefWidth="500">

            <Label text="User Registration" styleClass="title" />
            <Label text="Join the Recruitment Management System" styleClass="subtitle"/>

            <GridPane hgap="20" vgap="15" alignment="CENTER">

                <!-- FULL NAME -->
                <Label text="Full Name:" styleClass="label-form" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <TextField fx:id="fullNameField" styleClass="input-field" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                <!-- EMAIL -->
                <Label text="Email:" styleClass="label-form" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <TextField fx:id="emailField" styleClass="input-field" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <!-- USERNAME -->
                <Label text="Username:" styleClass="label-form" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <TextField fx:id="usernameField" styleClass="input-field" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                <!-- PASSWORD -->
                <Label text="Password:" styleClass="label-form" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                <PasswordField fx:id="passwordField" styleClass="input-field" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                <!-- CONFIRM PASSWORD -->
                <Label text="Confirm Password:" styleClass="label-form" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                <PasswordField fx:id="confirmPasswordField" styleClass="input-field" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

                <!-- CONTACT -->
                <Label text="Contact:" styleClass="label-form" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
                <TextField fx:id="contactField" styleClass="input-field" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

                <!-- ROLE -->
                <Label text="Role:" styleClass="label-form" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
                <ComboBox fx:id="roleCombo" styleClass="input-field" prefWidth="250"
                          GridPane.columnIndex="1" GridPane.rowIndex="6"/>

                <!-- COMPANY -->
                <Label text="Company:" styleClass="label-form" GridPane.columnIndex="0" GridPane.rowIndex="7"/>
                <TextField fx:id="companyField" styleClass="input-field" GridPane.columnIndex="1" GridPane.rowIndex="7"/>

                <!-- MESSAGE -->
                <Label fx:id="messageLabel" styleClass="label-error"
                       GridPane.columnIndex="0" GridPane.rowIndex="8"
                       GridPane.columnSpan="2"/>

            </GridPane>

            <!-- BUTTONS -->
            <HBox spacing="25" alignment="CENTER">
                <Button text="Register" onAction="#registerUser" styleClass="primary-btn" prefWidth="140"/>
                <Button text="Login Page" onAction="#goToLogin" styleClass="secondary-btn" prefWidth="140"/>
            </HBox>

        </VBox>

    </VBox>

    <stylesheets>
        <URL value="@style.css" />
    </stylesheets>

</StackPane>
