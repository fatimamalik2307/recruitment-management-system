<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.recruitment.app.controllers.WelcomeController"
            prefWidth="600" prefHeight="400"
            style="-fx-background-color: linear-gradient(to bottom right, #3e4eb8, #5ac3ff);">

    <!-- Center container -->
    <VBox spacing="20" alignment="CENTER"
          layoutX="150" layoutY="80"
          prefWidth="300" prefHeight="240"
          style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 20;">

        <Label text="Recruitment System"
               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333;" />

        <Button text="Login"
                onAction="#openLogin"
                prefWidth="200" prefHeight="40"
                style="-fx-background-color: #3e4eb8; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-size: 16;" />

        <Button text="Register"
                onAction="#openRegister"
                prefWidth="200" prefHeight="40"
                style="-fx-background-color: #5ac3ff; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-size: 16;" />
    </VBox>

</AnchorPane>
