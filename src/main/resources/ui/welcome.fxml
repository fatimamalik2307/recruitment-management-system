<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>
<?import java.net.URL?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.recruitment.app.controllers.WelcomeController"
            styleClass="anchor-pane"
            prefWidth="800" prefHeight="500">

    <!-- CENTER THE CARD -->
    <StackPane AnchorPane.topAnchor="0"
               AnchorPane.bottomAnchor="0"
               AnchorPane.leftAnchor="0"
               AnchorPane.rightAnchor="0"
               alignment="CENTER">

        <VBox spacing="20"
              alignment="CENTER"
              styleClass="card"
              maxWidth="350">

            <Label text="Recruitment System"
                   styleClass="title"/>

            <Button text="Login"
                    onAction="#openLogin"
                    styleClass="primary-btn"
                    maxWidth="180"/>

            <Button text="Register"
                    onAction="#openRegister"
                    styleClass="secondary-btn"
                    maxWidth="180"/>

        </VBox>

    </StackPane>

    <stylesheets>
        <URL value="@../styles/welcome.css"/>
    </stylesheets>

</AnchorPane>
