<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.recruitment.app.controllers.AssessmentFormController"
      spacing="15"
      prefWidth="1000"
      prefHeight="700"
      minWidth="900"
      minHeight="600"
      maxWidth="Infinity"
      maxHeight="Infinity"

      alignment="TOP_LEFT"
      stylesheets="@/styles/assessment.css">

    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>

    <Label text="Fill Assessment"
           styleClass="title-label"/>

    <GridPane hgap="15" vgap="15">
        <columnConstraints>
            <ColumnConstraints halignment="RIGHT"/>
            <ColumnConstraints hgrow="ALWAYS"/>
        </columnConstraints>

        <Label text="Technical Score:" GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="form-label"/>
        <TextField fx:id="technicalScoreField" GridPane.rowIndex="0" GridPane.columnIndex="1" styleClass="input-field"/>

        <Label text="HR Score:" GridPane.rowIndex="1" GridPane.columnIndex="0" styleClass="form-label"/>
        <TextField fx:id="hrScoreField" GridPane.rowIndex="1" GridPane.columnIndex="1" styleClass="input-field"/>

        <Label text="Remarks:" GridPane.rowIndex="2" GridPane.columnIndex="0" styleClass="form-label"/>
        <TextArea fx:id="remarksArea" GridPane.rowIndex="2" GridPane.columnIndex="1" prefRowCount="4" styleClass="input-area"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button fx:id="submitBtn" text="Submit" styleClass="primary-btn"/>
        <Button fx:id="cancelBtn" text="Cancel" styleClass="secondary-btn"/>
    </HBox>

</VBox>
